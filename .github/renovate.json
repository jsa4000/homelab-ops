  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "baseBranches": ["staging"],
  "useBaseBranchConfig": "merge",
  "ignorePaths": [
    "docs/"
  ],
  "extends": [
    "config:recommended"
  ],
  "helm-values": {
    "fileMatch": [
      "(^|/)kubernetes/.+\\.ya?ml(\\.j2)?$"
    ]
  },
  "kubernetes": {
    "fileMatch": [
      "(^|/)kubernetes/.+\\.ya?ml(\\.j2)?$"
    ]
  }
}
