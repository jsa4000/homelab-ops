# Some additional examples are commented out below

network:
  version: 2
  ethernets:
    $NETWORK_IFACE:
      dhcp4: false
      addresses: [$SERVER_IP/24]
      macaddress: $SERVER_MAC
      routes:
      - to: default
        via: $SERVER_GATEWAY
      nameservers:
        addresses: [$SERVER_DNS]

